<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#bbdefb">

    <TextView android:text="My Nanodegree Apps!" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Spotify Streamer"
        android:id="@+id/spotifyStreamer"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="onClickSpotifyStreamer"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Scores App"
        android:id="@+id/scoresApp"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="onClickScoresApp"
         />

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Library App"
        android:id="@+id/libraryApp"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="onClickLibraryApp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Build it Bigger"
        android:id="@+id/buildItBigger"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="onClickBuildItBigger" />

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="XYZ Reader"
        android:id="@+id/xyzReader"
        android:background="#F08C35"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="onClickXYZReader" />

    <Button
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Capstone: My Own App"
        android:id="@+id/capstone"
        android:background="#f44336"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="onClickCapstone" />

</LinearLayout>
